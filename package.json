{
  "name": "solidity-ecommerce-basicsample",
  "version": "1.0.0",
  "private": true,
  "description": "Solidity ecommerce basic example, to learn solidity concepts",
  "repository": "git@github.com:german-bortoli/solidity-ecommerce-basicsample.git",
  "license": "MIT",
  "author": "German Bortoli <germanazo@gmail.com>",
  "main": "src/index.ts",
  "scripts": {
    "build": "yarn compile --force",
    "chain": "hardhat node",
    "compile": "hardhat compile",
    "coverage": "yarn build && hardhat coverage --temp artifacts --network coverage",
    "deploy:factory:init": "hardhat run scripts/deploy-factory.ts",
    "deploy:init": "hardhat run scripts/deploy-immutable.ts",
    "dev": "hardhat watch compile",
    "preexample": "yarn --cwd example install && cp -r typechain example/typechain",
    "example": "yarn --cwd example dev",
    "format": "prettier --ignore-path .gitignore --write './**/*.{ts,sol,json,md,yml}'",
    "gendoc": "npx solidity-docgen --solc-module solc -i ./contracts -o ./docs/solidity",
    "hh": "hardhat",
    "postinstall": "patch-package && yarn build",
    "lint": "yarn lint:solhint && yarn lint:prettier",
    "lint:prettier": "prettier --ignore-path .gitignore --check './**/*.{ts,sol,json,md,yml}'",
    "lint:solhint": "hardhat check",
    "prepare": "husky install",
    "test": "hardhat test",
    "test:watch": "hardhat watch test"
  },
  "lint-staged": {
    "*.{ts,sol,json,md,yml}": "prettier --write",
    "*.sol": "solhint"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.0",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.3.3",
    "@openzeppelin/contracts-upgradeable": "^4.3.3",
    "@openzeppelin/hardhat-upgrades": "^1.5.0",
    "@typechain/ethers-v5": "^8.0.2",
    "@typechain/hardhat": "3.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.14",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.2.1",
    "ethers": "^5.5.1",
    "hardhat": "^2.6.8",
    "hardhat-abi-exporter": "^2.3.1",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-log-remover": "^2.0.1",
    "hardhat-tracer": "^1.0.0-alpha.6",
    "hardhat-watcher": "^2.1.1",
    "husky": "^7.0.4",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^12.0.2",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.4.1",
    "prettier-plugin-import-sort": "^0.0.7",
    "prettier-plugin-packagejson": "^2.2.15",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solc": "^0.8.10",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17",
    "solidity-docgen": "^0.5.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.4.0",
    "typechain": "^6.0.2",
    "typescript": "^4.4.4"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
